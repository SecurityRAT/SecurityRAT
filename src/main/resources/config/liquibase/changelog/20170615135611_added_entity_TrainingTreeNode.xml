<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="real" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity TrainingTreeNode.
    -->
    <changeSet id="20170615135611" author="jhipster">
        <createTable tableName="TRAININGTREENODE">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="node_type" type="varchar(255)"/>
            <column name="sort_order" type="integer"/>
            <column name="parent_id_id" type="bigint"/>
            <column name="training_id_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="parent_id_id"
                                 baseTableName="TRAININGTREENODE"
                                 constraintName="fk_trainingtreenode_parent_id_id"
                                 referencedColumnNames="id"
                                 referencedTableName="TRAININGTREENODE"/>

        <addForeignKeyConstraint baseColumnNames="training_id_id"
                                 baseTableName="TRAININGTREENODE"
                                 constraintName="fk_trainingtreenode_training_id_id"
                                 referencedColumnNames="id"
                                 referencedTableName="TRAINING"/>

        <!-- special tables to differenciate different node types -->
        <createTable tableName="TRAININGCATEGORYNODE">
            <column name="node_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <!-- many-to-one to REQCATEGORY -->
            <column name="category_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="node_id"
                                 baseTableName="TRAININGCATEGORYNODE"
                                 constraintName="fk_trainingcategorynode_node_id"
                                 referencedColumnNames="id"
                                 referencedTableName="TRAININGTREENODE"/>

        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="TRAININGCATEGORYNODE"
                                 constraintName="fk_trainingcategorynode_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="REQCATEGORY"/>

        <createTable tableName="TRAININGCUSTOMSLIDENODE">
            <column name="node_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="content" type="TEXT"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="node_id"
                                 baseTableName="TRAININGCUSTOMSLIDENODE"
                                 constraintName="fk_trainingcustomslidenode_node_id"
                                 referencedColumnNames="id"
                                 referencedTableName="TRAININGTREENODE"/>

    </changeSet>
</databaseChangeLog>
